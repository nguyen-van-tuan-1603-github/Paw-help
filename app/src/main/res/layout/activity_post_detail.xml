<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_welcome_gradient"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Back and Share buttons -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#4DB6AC">

            <!-- Back Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="#80FFFFFF"
                app:cardElevation="2dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/muiten"
                    app:tint="@color/white" />
            </androidx.cardview.widget.CardView>

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Chi tiết tin đăng"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Share Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnShare"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="@color/secondary"
                app:cardElevation="@dimen/elevation_low">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_share"
                    app:tint="@color/white" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <!-- Main Content Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Image Container -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/imgPostPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cho"
                        android:contentDescription="Rescue animal photo" />
                </androidx.cardview.widget.CardView>

                <!-- Content Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Status Badge -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_button"
                        android:backgroundTint="#FFF3E0"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/emergency"
                            app:tint="#FF9800"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mới cần cứu hộ"
                            android:textColor="#FF9800"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginStart="6dp" />
                    </LinearLayout>

                    <!-- Title/Description -->
                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phát hiện một chú chó con bị thương ở chân, không thể đi lại được. Cần cứu hộ gấp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Location Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_button"
                        android:backgroundTint="#E0F7FA"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/location"
                            app:tint="#00ACC1"
                            android:layout_gravity="center_vertical" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Địa điểm"
                                android:textSize="11sp"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số 123 Đường Lê Lợi, Quận Hải Châu, Đà Nẵng"
                                android:textSize="13sp"
                                android:textColor="#00ACC1"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <!-- Call Button -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnCall"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardBackgroundColor="#E8F5E9"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/phone"
                                    app:tint="#4CAF50" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Gọi điện"
                                    android:textColor="#4CAF50"
                                    android:textSize="13sp"
                                    android:textStyle="bold"
                                    android:layout_marginStart="6dp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Report Button -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnReport"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardBackgroundColor="#FFEBEE"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/cancel"
                                    app:tint="#E91E63" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Báo cáo"
                                    android:textColor="#E91E63"
                                    android:textSize="13sp"
                                    android:textStyle="bold"
                                    android:layout_marginStart="6dp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <!-- Rescue Button -->
                    <Button
                        android:id="@+id/btnRescue"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_large"
                        android:text="Tôi muốn giúp cứu hộ"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_gradient_background"
                        android:layout_marginTop="@dimen/spacing_m" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />
    </LinearLayout>
</ScrollView>
