<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_welcome_gradient"
    tools:context=".WelcomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_paw_logo_large"
                android:layout_marginTop="32dp"
                android:contentDescription="PawHelp Logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="32sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:shadowColor="#40000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_message"
                android:gravity="center"
                android:textColor="#E0FFFFFF"
                android:textSize="15sp"
                android:layout_marginTop="8dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/img_dog_on_tracks"
                android:scaleType="fitCenter"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:contentDescription="A dog in need of rescue" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_large"
                android:text="@string/btn_login"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_gradient_background"
                android:drawableStart="@drawable/ic_login_arrow"
                android:drawablePadding="8dp"
                app:cornerRadius="@dimen/radius_medium"
                android:elevation="8dp"
                android:layout_marginBottom="@dimen/spacing_m" />

            <Button
                android:id="@+id/btnGetStarted"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_large"
                android:layout_marginBottom="@dimen/spacing_m"
                android:backgroundTint="#FFFFFF"
                android:drawableStart="@drawable/ic_register_person"
                android:drawablePadding="8dp"
                android:elevation="4dp"
                android:text="@string/btn_register"
                android:textSize="16sp"
                android:textColor="@color/button_primary"
                android:textStyle="bold"
                app:cornerRadius="@dimen/radius_medium" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>