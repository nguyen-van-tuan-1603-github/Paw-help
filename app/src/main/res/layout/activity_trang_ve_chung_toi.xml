<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Content Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Hero Section with Image -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="#4DB6AC">

                    <!-- Background Pattern -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_paw_logo_large"
                        android:scaleType="centerCrop"
                        android:alpha="0.1" />

                    <!-- Header Title -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_paw_logo"
                            android:layout_gravity="center"
                            app:tint="@color/white"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PAW HELP"
                            android:textColor="@color/white"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hội Cứu Trợ Động Vật Đà Nẵng"
                            android:textColor="@color/white_opacity"
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Year Badge -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        android:padding="8dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="16dp"
                        android:elevation="4dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/history"
                            app:tint="@color/text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Từ 2013"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>
                </RelativeLayout>

                <!-- Main Content Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- About Us Badge -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VỀ CHÚNG TÔI"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#4DB6AC"
                        android:background="#E0F2F1"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="6dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Main Description -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sứ mệnh của chúng tôi"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hội Cứu Trợ Động Vật Đà Nẵng được thành lập từ tháng 01/2013, với sứ mệnh bảo vệ và cải thiện cuộc sống của các động vật bị bỏ rơi, lạc dạng và gặp nạn."
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Khởi đầu từ một nhóm nhỏ các bạn trẻ yêu thương động vật, với sự đóng góp của cộng đồng và nhiệt huyết của các tình nguyện viên, chúng tôi đã không ngừng phát triển và hoàn thiện tổ chức."
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="24dp" />

                    <!-- Statistics Grid -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="THÀNH TÍCH"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#4DB6AC"
                        android:background="#E0F2F1"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="6dp"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Row 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <!-- Stat Card 1 -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="6dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#E0F2F1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:padding="16dp">

                                    <ImageView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:src="@drawable/ic_paw_logo"
                                        app:tint="#4DB6AC"
                                        android:layout_marginBottom="8dp" />

                                    <TextView
                                        android:id="@+id/tvRescuedCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="1,500+"
                                        android:textSize="24sp"
                                        android:textStyle="bold"
                                        android:textColor="#4DB6AC" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Cứu hộ"
                                        android:textSize="12sp"
                                        android:textColor="@color/text_secondary"
                                        android:textAlignment="center" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <!-- Stat Card 2 -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="6dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#E0F2F1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:padding="16dp">

                                    <ImageView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:src="@drawable/pets"
                                        app:tint="#4DB6AC"
                                        android:layout_marginBottom="8dp" />

                                    <TextView
                                        android:id="@+id/tvAdoptedCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="800+"
                                        android:textSize="24sp"
                                        android:textStyle="bold"
                                        android:textColor="#4DB6AC" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Nhận nuôi"
                                        android:textSize="12sp"
                                        android:textColor="@color/text_secondary"
                                        android:textAlignment="center" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <!-- Row 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Stat Card 3 -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="6dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#E0F2F1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:padding="16dp">

                                    <ImageView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:src="@drawable/volunteer"
                                        app:tint="#4DB6AC"
                                        android:layout_marginBottom="8dp" />

                                    <TextView
                                        android:id="@+id/tvVolunteersCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="50+"
                                        android:textSize="24sp"
                                        android:textStyle="bold"
                                        android:textColor="#4DB6AC" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Tình nguyện viên"
                                        android:textSize="12sp"
                                        android:textColor="@color/text_secondary"
                                        android:textAlignment="center" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <!-- Stat Card 4 -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="6dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#E0F2F1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:padding="16dp">

                                    <ImageView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:src="@drawable/history"
                                        app:tint="#4DB6AC"
                                        android:layout_marginBottom="8dp" />

                                    <TextView
                                        android:id="@+id/tvYearsCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="10+"
                                        android:textSize="24sp"
                                        android:textStyle="bold"
                                        android:textColor="#4DB6AC" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Năm hoạt động"
                                        android:textSize="12sp"
                                        android:textColor="@color/text_secondary"
                                        android:textAlignment="center" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Contact Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LIÊN HỆ"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#4DB6AC"
                        android:background="#E0F2F1"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="6dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Social Media Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Facebook Button -->
                        <LinearLayout
                            android:id="@+id/btnFacebook"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/rounded_button"
                            android:backgroundTint="#1877F2"
                            android:padding="12dp"
                            android:gravity="center"
                            android:layout_marginBottom="8dp"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/facebook"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Theo dõi trên Facebook"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>

                        <!-- Website Button -->
                        <LinearLayout
                            android:id="@+id/btnWebsite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/rounded_button"
                            android:backgroundTint="#4DB6AC"
                            android:padding="12dp"
                            android:gravity="center"
                            android:layout_marginBottom="8dp"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_baseline_language_24"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Truy cập Website"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>

                        <!-- Email Button -->
                        <LinearLayout
                            android:id="@+id/btnEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/rounded_button"
                            android:backgroundTint="#EA4335"
                            android:padding="12dp"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/email"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gửi Email cho chúng tôi"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <Button
                            android:id="@+id/btnViewTeam"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Xem đội ngũ"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:background="@drawable/rounded_button"
                            android:backgroundTint="#4DB6AC"
                            android:layout_marginEnd="6dp"
                            android:padding="12dp" />

                        <Button
                            android:id="@+id/btnDonate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ủng hộ"
                            android:textColor="#4DB6AC"
                            android:textStyle="bold"
                            android:background="@drawable/rounded_button"
                            android:backgroundTint="@color/white"
                            android:layout_marginStart="6dp"
                            android:padding="12dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
