<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".GuestReportRescueActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_back"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Quay lại" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Báo cáo cần cứu hộ"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:layout_marginEnd="40dp" />

            </LinearLayout>

            <!-- Guest Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FFF3E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_guest"
                            android:contentDescription="Guest Icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chế độ Khách"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#E65100"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vui lòng cung cấp thông tin liên lạc để chúng tôi có thể hỗ trợ bạn."
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Main Form Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin người báo cáo"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Họ và tên -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Họ và tên *"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/edtFullName"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/input_selector"
                        android:drawableStart="@drawable/ic_person"
                        android:drawablePadding="12dp"
                        android:hint="Nhập họ và tên của bạn"
                        android:inputType="textPersonName"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textSize="16sp" />

                    <!-- Số điện thoại -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số điện thoại *"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/edtPhone"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/input_selector"
                        android:drawableStart="@drawable/ic_phone"
                        android:drawablePadding="12dp"
                        android:hint="Ví dụ: 0905123456"
                        android:inputType="phone"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textSize="16sp" />

                    <!-- Email (tùy chọn) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email (không bắt buộc)"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/edtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/input_selector"
                        android:drawableStart="@drawable/ic_email"
                        android:drawablePadding="12dp"
                        android:hint="example@email.com"
                        android:inputType="textEmailAddress"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textSize="16sp" />

                    <!-- Địa chỉ chi tiết -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ phát hiện động vật *"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/edtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/input_selector"
                        android:drawableStart="@drawable/ic_location"
                        android:drawablePadding="12dp"
                        android:hint="Ví dụ: 123 Đường Lê Lợi, Hải Châu, Đà Nẵng"
                        android:inputType="textPostalAddress"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Animal Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin động vật"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Loại động vật -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loại động vật *"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/spinnerAnimalType"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/input_selector"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />

                    <!-- Tình trạng -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tình trạng động vật *"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/spinnerCondition"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/input_selector"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />

                    <!-- Mô tả chi tiết -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mô tả chi tiết *"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/edtDescription"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/input_selector"
                        android:hint="Mô tả chi tiết tình trạng động vật, vị trí cụ thể..."
                        android:inputType="textMultiLine"
                        android:gravity="top|start"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="16sp" />

                    <!-- Thời gian phát hiện -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thời gian phát hiện"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/edtDateTime"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/input_selector"
                        android:drawableStart="@drawable/history"
                        android:drawablePadding="12dp"
                        android:hint="Nhấn để chọn ngày giờ"
                        android:focusable="false"
                        android:clickable="true"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Priority Notice -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FFEBEE">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/emergency"
                        android:tint="#D32F2F"
                        android:contentDescription="Emergency Icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Trường hợp khẩn cấp, vui lòng gọi: 0905-XXX-XXX"
                        android:textSize="13sp"
                        android:textColor="#D32F2F"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Submit Button -->
            <Button
                android:id="@+id/btnSubmitReport"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_ripple"
                android:drawableStart="@drawable/ic_rescue"
                android:drawablePadding="8dp"
                android:text="Gửi yêu cầu cứu hộ"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:elevation="4dp"
                android:stateListAnimator="@null"
                app:cornerRadius="@dimen/radius_medium" />

            <!-- Terms Notice -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bằng việc gửi yêu cầu, bạn đồng ý cung cấp thông tin chính xác và cho phép chúng tôi liên hệ lại để hỗ trợ."
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:layout_marginBottom="20dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
