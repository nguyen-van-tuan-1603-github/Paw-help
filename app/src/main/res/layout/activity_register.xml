<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login_gradient"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="80dp"
            android:paddingBottom="40dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                app:cardElevation="8dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <include layout="@layout/login_register_header" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/tab_background_gray"
                        android:orientation="horizontal"
                        android:padding="2dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Đăng nhập"
                            android:textColor="#999999" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/tab_selected_white"
                            android:gravity="center"
                            android:text="Đăng ký"
                            android:textColor="#5EAAA8" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/full_name_label"
                        android:textColor="#5EAAA8"
                        android:textStyle="bold"
                        android:textSize="14sp" />
                    <EditText
                        android:id="@+id/edtFullName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="4dp"
                        android:hint="@string/hint_fullname"
                        android:background="@drawable/input_field_background"
                        android:paddingHorizontal="16dp"
                        android:drawableStart="@drawable/ic_person"
                        android:drawablePadding="12dp"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email_label"
                        android:layout_marginTop="12dp"
                        android:textColor="#5EAAA8"
                        android:textStyle="bold"
                        android:textSize="14sp" />
                    <EditText
                        android:id="@+id/edtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="4dp"
                        android:hint="@string/hint_email"
                        android:background="@drawable/input_field_background"
                        android:paddingHorizontal="16dp"
                        android:drawableStart="@drawable/ic_email"
                        android:drawablePadding="12dp"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_label"
                        android:layout_marginTop="12dp"
                        android:textColor="#5EAAA8"
                        android:textStyle="bold"
                        android:textSize="14sp" />
                    <EditText
                        android:id="@+id/edtPhone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="4dp"
                        android:hint="@string/hint_phone"
                        android:background="@drawable/input_field_background"
                        android:paddingHorizontal="16dp"
                        android:drawableStart="@drawable/ic_phone"
                        android:drawablePadding="12dp"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/password_label"
                        android:layout_marginTop="12dp"
                        android:textColor="#5EAAA8"
                        android:textStyle="bold"
                        android:textSize="14sp" />
                    <EditText
                        android:id="@+id/edtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="4dp"
                        android:hint="@string/hint_password"
                        android:inputType="textPassword"
                        android:background="@drawable/input_field_background"
                        android:paddingHorizontal="16dp"
                        android:drawableStart="@drawable/ic_lock"
                        android:drawablePadding="12dp"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/cbAgreeTerms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Người bảo tin / Người cứu hộ"
                        android:textColor="#757575"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/btnRegister"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:text="Tạo tài khoản"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/button_gradient_background"
                        android:textStyle="bold"
                        app:cornerRadius="15dp" />

                    <TextView
                        android:id="@+id/tvLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:text="Đã có tài khoản? Đăng nhập"
                        android:textColor="#5EAAA8"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>