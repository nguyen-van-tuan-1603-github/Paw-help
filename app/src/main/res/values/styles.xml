<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Style - Required for PawHelp.* style inheritance -->
    <style name="PawHelp" />

    <!-- Button Styles -->
    <style name="PawHelp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/button_height_medium</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PawHelp.Button.Primary">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PawHelp.Button.Secondary">
        <item name="backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PawHelp.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/button_height_medium</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Card Styles -->
    <style name="PawHelp.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/radius_medium</item>
        <item name="cardElevation">@dimen/elevation_low</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="PawHelp.Card.Elevated">
        <item name="cardElevation">@dimen/elevation_medium</item>
    </style>

    <style name="PawHelp.Card.Flat">
        <item name="cardElevation">@dimen/elevation_none</item>
    </style>

    <!-- Text Styles -->
    <style name="PawHelp.Text" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="PawHelp.Text.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="PawHelp.Text.Subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="PawHelp.Text.Body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="PawHelp.Text.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Input Field Styles -->
    <style name="PawHelp.EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">14dp</item>
        <item name="android:background">@drawable/input_field_background</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <!-- Badge Styles -->
    <style name="PawHelp.Badge">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PawHelp.Badge.Success">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:backgroundTint">@color/success_bg</item>
        <item name="android:textColor">@color/success</item>
    </style>

    <style name="PawHelp.Badge.Warning">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:backgroundTint">@color/warning_bg</item>
        <item name="android:textColor">@color/warning</item>
    </style>

    <style name="PawHelp.Badge.Error">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:backgroundTint">@color/error_bg</item>
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="PawHelp.Badge.Info">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:backgroundTint">@color/info_bg</item>
        <item name="android:textColor">@color/info</item>
    </style>

    <!-- Icon Styles -->
    <style name="PawHelp.Icon">
        <item name="android:layout_width">@dimen/icon_size_medium</item>
        <item name="android:layout_height">@dimen/icon_size_medium</item>
    </style>

    <style name="PawHelp.Icon.Small">
        <item name="android:layout_width">@dimen/icon_size_small</item>
        <item name="android:layout_height">@dimen/icon_size_small</item>
    </style>

    <style name="PawHelp.Icon.Large">
        <item name="android:layout_width">@dimen/icon_size_large</item>
        <item name="android:layout_height">@dimen/icon_size_large</item>
    </style>

    <!-- Divider Style -->
    <style name="PawHelp.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#F0F0F0</item>
        <item name="android:layout_marginTop">@dimen/spacing_m</item>
        <item name="android:layout_marginBottom">@dimen/spacing_m</item>
    </style>
</resources>
