# ==================== PAW HELP BACKEND CONFIGURATION ====================

# Server Configuration
NODE_ENV=development
PORT=5125
HOST=0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=pawhelp_db
DB_USER=root
DB_PASSWORD=

# JWT Configuration
# IMPORTANT: Change this in production!
JWT_SECRET=pawhelp-secret-key-change-this-in-production-2025
JWT_EXPIRES_IN=24h

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# CORS Configuration
# Use * for development, specific origins for production
ALLOWED_ORIGINS=*

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

