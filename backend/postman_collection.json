      ]
    },
    {
      "name": "Team",
      "item": [
        {
          "name": "Get Team Members",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/team",
              "host": ["{{base_url}}"],
              "path": ["team"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:5125/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5125",
          "path": [""]
        }
      }
    }
  ]
}

